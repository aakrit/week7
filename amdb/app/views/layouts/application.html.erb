<!DOCTYPE html>
<html>
<head>
  <title>Amdb</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <%= link_to "Directors", directors_url %> |
    <%= link_to "Movies", movies_url %> |
    <%= link_to "Roles", roles_url %> |
    <%= link_to "Actors", actors_url %> |
    <%= link_to "Users", users_url %>
  </nav>
  <% if session[:user_id].present? %>
    <p>
      Welcome back, <%= User.find_by_id(session[:user_id]).email %>.
      <%= link_to "Sign Out", session_url, method: 'delete' %>
    </p>
  <% else %>
    <p><%= link_to "Sign In", new_session_url %> or <%= link_to "Sign Up", new_user_url %></p>
  <% end %>
  <p><%= notice %></p>

  <%= yield %>

</body>
</html>
